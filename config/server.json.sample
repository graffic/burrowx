{
  "general": {
    "logconfig": "config/logging.xml",
    "pidfile": "burrowx.pid",
    "clientId": "burrowx-lagchecker",
    "groupBlacklist": "^(console-consumer-|python-kafka-consumer-).*$",


    "@desc" : "topic filter regexes, separate by `,`, could be .* or empty string",
    "topicFilter" : ".*",

    "@desc" : "client infos, such as tls",
    "clientProfile" : {
        "some_key" : {
          "clientId" : "some_client_id",
          "tls" : false,
          "tlsNoverify" : false,
          "tlsCertfilepath" : "xxxx",
          "tlsKeyfilepath" : "xxx",
          "tlsCafilepath" : "xxxx"
        }
    }
  },
  "zookeeper": {
    "hosts": "localhost:2181",
    "timeout": 6,
    "lock-path": "/burrow/notifier"
  },
  "kafka": {
    "local": {
      "brokers": "localhost:9092",
      "zookeepers": "localhost:2181",
      "offsetsTopic": "__consumer_offsets",

      "@desc" :  "client info key to client infos",
      "clientProfile": ""
    }
  },
  "influxdb": {
    "hosts": "http://localhost:8086",
    "db": "burrowx",
    "username": "",
    "pwd": "",

    "@desc": "By default consumer_metrics",
    "measurement": "measurement_name_for_influx",

    "@desc": "No extra tags if missing",
    "extra_tags": {
      "env": "production"
    }
  }
}
